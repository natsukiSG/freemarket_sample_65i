.product-show-wrapper
  .header
    = render 'layouts/header'

  .product-show-detail
    %h1.product-show-name
      = @product.name

    .product-show-maincontent
      .product-show-image
        - if (@product.buyer_id.blank?)
          .product-show-image__main
            = image_tag "#{@images[0].url}",class: "details__photo__main__image",id: "mainphoto", size: "300x300"
          .product-show-image__under
            - @images.each do |image|
              = image_tag "#{image.url}",class: "details__photo__under__image", size: "60x60"
        - else
          .product-show-image__main
            = image_tag "#{@images[0].url}",class: "details__photo__main__image",id: "mainphoto", size: "300x300"
            .product-show_sold-out_badge
            .product-show_sold-out_badge-text
              SOLD
          .product-show-image__under
            - @images.each do |image|
              = image_tag "#{image.url}",class: "details__photo__under__image", size: "60x60"
          

      .product-show-detailtable
        .product-show-tr
          .product-show-th
            出品者
          .product-show-td
            = link_to "", class: "product-show-td-link" do
              = @seller&.nickname
            .product-show-ratings
              .product-show-iconbox
                = fa_icon 'heart',class: 'product-show-icon1'
                264
              .product-show-iconbox
                = fa_icon 'bell',class: 'product-show-icon2'
                5
              .product-show-iconbox
                = fa_icon 'check',class: 'product-show-icon3'
                1
        .product-show-tr
          .product-show-th
            カテゴリー
          .product-show-td
            .product-show-linkbox
              = link_to category_path(@parent), class: "product-show-categorylink" do
                = @parent.name
            .product-show-linkbox
              = link_to category_path(@child), class: "product-show-categorylink" do
                >
                = @child.name
            .product-show-linkbox
              = link_to category_path(@category), class: "product-show-categorylink" do
                >
                = @category.name
        - if @brand.present?
          .product-show-tr
            .product-show-block1
              ブランド
            .product-show-block2
              = link_to brand_path(@brand), class: "product-show-productlink" do
                = @brand.name
        - if @product.size.present?
          .product-show-tr
            .product-show-block1
              商品サイズ
            .product-show-block2
              = @product.size.name
        .product-show-tr
          .product-show-block1
            商品の状態
          .product-show-block2
            = @product.status
        .product-show-tr
          .product-show-block1
            配送料の負担
          .product-show-block2
            = @product.costcharge
        .product-show-tr
          .product-show-block1
            配送の方法
          .product-show-block2
            = @product.delivery_way
        .product-show-tr
          .product-show-block1
            配送元地域
          .product-show-block2
            = link_to "", class: "product-show-citylink" do
              = @product.delivery_area
        .product-show-tr
          .product-show-block1
            配送日の目安
          .product-show-block2
            = @product.delivery_date
    .product-show-pricebox
      .product-show-price
        = "¥" + "#{@product.price.to_s(:delimited, delimiter: ',')}" + "円"
      .product-show-tax
        (税込)
      .product-show-shipping-fee
        送料込み
    - if (@product.buyer_id.blank?)
      - if user_signed_in?
        - if @product.seller_id == current_user.id
          = link_to edit_product_path(@product.id),class: "product-show-buylink" do
            .product-show-buybtn
              編集
          = link_to toppage_path(@product.id), method: :delete, data: { confirm: "「#{@product.name}」を削除します。よろしいですか？" }, class: "product-show-buylink" do
            .product-show-buybtn
              削除
        - else
          = link_to buy_confirmation_product_path ,class: "product-show-buylink" do
            .product-show-buybtn
              購入画面に進む
      - else
        = link_to new_user_session_path ,class: "product-show-buylink" do
          .product-show-buybtn
            購入画面に進む
    - else
      .product-show-sold-out-link
        売り切れました

    .product-show-description
      %p.product-show-inner
        = @product.comment
        

    .product-show-itembutton
      .product-show-itembutton-left
        = render partial: "likes/like", locals: { product: @product } 
        = link_to "" ,class: "product-show-reportlink" do
          = fa_icon 'flag',class: 'product-show-reporticon'
          .product-show-reporttext
            不適切な商品の報告

      .product-show-link-right
        = link_to "" ,class: "product-show-linktext" do
          = fa_icon 'key',class: 'product-show-keyicon'
          .product-show-text
            あんしん・あんぜんへの取り組み

  .product-show-messeagecontent
    .product-show-itemlink
      = link_to "" ,class: "product-show-messagelink" do
        < 眼鏡市場メガネケース2色リバーシブル仕様

    .product-show-itemlink
      = link_to "" ,class: "product-show-messagelink" do
        タートルネックボーダーカットソー >

  .product-show-media-box
    = link_to "", class: "product-show-facebook" do
      = fa_icon 'facebook-square',class: 'product-show-facebook-icon'

    = link_to "", class: "product-show-twitter" do
      = fa_icon 'twitter',class: 'product-show-twitter-icon'

    = link_to "", class: "product-show-pinterest" do
      = fa_icon 'pinterest-square',class: 'product-show-pinterest-icon'

  .product-show-boxposition1
    .product-show-items-box
      .product-show-items-name
        = link_to "", class: "product-show-text-link" do
          - @seller.nickname + "さんのその他の出品"
      .product-show-items-list
        - @seller&.seller_products&.each&.with_index(1) do |product, i|
          - if (i <= 6)
            .product-show-item-box
              - if (product.buyer_id.blank?)
                = link_to toppage_path(product), class: "show_product_link" do
                  .product-show-item-box-photo
                    = image_tag "#{product.images.last.url}", size: "220x220"
                  .product-show-item-box-body
                    .product-show-item-box-body-name
                      = product.name
                    .product-show-item-box-body-price
                      = '¥' + "#{product.price}"
              - else
                = link_to toppage_path(product), class: "show_product_link" do
                  .product-show-item-box-photo
                    .product_sold-out_badge
                    .product_sold-out_badge-text
                      SOLD
                    = image_tag "#{product&.images&.last&.url}", size: "220x220"
                  .product-show-item-box-body
                    .product-show-item-box-body-name
                      = product.name
                    .product-show-item-box-body-price
                      = '¥' + "#{product.price}"
  - if @brand.present?
    .product-show-boxposition2
      .product-show-items-box
        .product-show-items-name
          = link_to brand_path(@brand), class: "product-show-text-link" do
            = @brand.name + "のその他の商品"
        .product-show-items-list
          - @brand.products.each.with_index(1) do |product, i|
            - if (i <= 6)
              .product-show-item-box
                - if (product.buyer_id.blank?)
                  = link_to category_path(product), class: "show_product_link" do
                    .product-show-item-box-photo
                      = image_tag "#{product.images.last.url}", size: "220x220"
                    .product-show-item-box-body
                      .product-show-item-box-body-name
                        = product.name
                      .product-show-item-box-body-price
                        = '¥' + "#{product.price}"
                - else
                  = link_to category_path(product), class: "show_product_link" do
                    .product-show-item-box-photo
                      .product_sold-out_badge
                      .product_sold-out_badge-text
                        SOLD
                      = image_tag "#{product.images.last.url}", size: "220x220"
                    .product-show-item-box-body
                      .product-show-item-box-body-name
                        = product.name
                      .product-show-item-box-body-price
                        = '¥' + "#{product.price}"    

  .app-banner
    = render 'layouts/banner'

  .footer
    = render 'layouts/footer'