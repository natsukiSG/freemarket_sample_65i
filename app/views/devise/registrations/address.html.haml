.signup
  .signup-header
    .logo
      .signup_head-logo
        =link_to root_path do
          = image_tag "fmarket_logo_red.svg",  size: "185x49"
          
        .signup-bar
          %ol.signup-lists
            %li.signup-list
              会員情報
              .list-round-left.list-active-left
            %li.signup-list
              電話番号認証
              .list-round.list-active-a.list-active-b
            %li.signup-list.active-title
              お届け先住所入力
              .list-round.list-active-a
            %li.signup-list
              支払い方法
              .list-round
            %li.signup-list
              完了
              .list-round-right
.signup-main
  .main-contents
    .main-contents-title 住所入力
    .signup-error-message
      - if @user.errors.any? #仮置き@user @streetaddress
        %p 入力項目に誤りがあります
    = form_for @user, url: "user2_signups_path", method: :post do |f| #仮置き@user @streetaddress
      .form-group
        %div
          %label.form-label お名前
          %span.form-require 必須
        .flexer
          = f.text_field :last_name, placeholder: '例) 山田', class: 'input-box first-half'
          = f.text_field :first_name, placeholder: '例) 彩', class: 'input-box second-half'
      .form-group
        %div
          %label.form-label お名前カナ(全角)
          %span.form-require 必須
        .flexer
          = f.text_field :last_name_kana, placeholder: '例) ヤマダ', class: 'input-box first-half' 
          = f.text_field :first_name_kana, placeholder: '例) アヤ', class: 'input-box second-half'
      .form-group
        %label.form-label 郵便番号
        %span.form-require 必須
        = f.text_field :last_name, placeholder: '例) 123-4567', class: 'input-box' #last_name仮置き 郵便番号のカラム
      .form-group
        %label.form-label 都道府県
        %span.form-require 必須
        .select-box2
          -# = f.select :prefecture, Streetaddress.prefectures.keys
          = fa_icon 'sort-down',class: 'fa-sort-down2'
      .form-group
        %label.form-label 市区町村
        %span.form-require 必須
        = f.text_field :last_name, placeholder: '例) 横浜市緑区', class: 'input-box'#last_name仮置き　住所のカラム
      .form-group
        %label.form-label 番地
        %span.form-require 必須
        = f.text_field :last_name, placeholder: '例) 青山1-1-1', class: 'input-box'#last_name仮置き　住所
      .form-group
        %label.form-label 建物名
        %span.form-any 任意
        = f.text_field :last_name, placeholder: '例) 柳ビル103', class: 'input-box'#last_name仮置き　ビル
      .form-group
        %label.form-label 電話
        %span.form-any 任意
        = f.text_field :phone_number, placeholder: '例) 09012345678', class: 'input-box'
      .form-group
        = f.submit "次へ進む", class: 'next-button'
= render 'signup_footer'