.signup
  .signup-header
    .logo
      .signup_head-logo
        =link_to root_path do
          = image_tag "fmarket_logo_red.svg",  size: "185x49"
          
        .signup-bar
          %ol.signup-lists
            %li.signup-list
              会員情報
              .list-round-left.list-active-left
            %li.signup-list
              電話番号認証
              .list-round.list-active-a.list-active-b
            %li.signup-list
              お届け先住所入力
              .list-round.list-active-a.list-active-b
            %li.signup-list.active-title
              支払い方法
              .list-round.list-active-a
            %li.signup-list
              完了
              .list-round-right
.signup-main
  .main-contents
    .main-contents-title 支払い方法
    = form_tag("#", method: :post, id: 'charge-form',  name: "inputForm") do
      .form-group
        %label.form-label カード番号
        %span.form-require 必須
        = text_field_tag "number", "", class: "number input-box", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
      .form-group
        %ul.signup-card-list
          %li
            = image_tag "http://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3466462615", size: "49x20"
          %li
            = image_tag "http://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3466462615", size: "34x20"
          %li
            = image_tag "http://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3466462615", size: "30x20"
          %li
            = image_tag "http://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3466462615", size: "32x20"
          %li
            = image_tag "http://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3466462615", size: "21x20"
          %li
            = image_tag "http://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3466462615", size: "32x20"
          %li
            = image_tag "http://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?346646261", size: "32x20"
      .form-group
        %div
          %label.form-label 有効期限
          %span.form-require 必須
        .select-wrapper
          .select-box
            .unit-box
              = fa_icon 'sort-down',class: 'fa-sort-down'
              %select#exp_month{name: "exp_month", type: "text", class: "select-unit"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
          %span.unit 月
          .select-box
            .unit-box
              = fa_icon 'sort-down',class: 'fa-sort-down'
              %select#exp_year{name: "exp_year", type: "text", class: "select-unit"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
          %span.unit 年
      .form-group
        %label.form-label セキュリティコード
        %span.form-require 必須
        = text_field_tag "cvc", "", class: "cvc input-box", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
        #card_token
      .form-group
        = submit_tag "次へ進む", id: "token_submit", class: 'next-button'
= render 'signup_footer'